{
  "manifest_version": 3,
  "name": "SimpleScan",
  "description": "Paste a Solana mint and get an instant rug-risk scan.",
  "version": "0.2.0",
  "permissions": ["storage"],
  "host_permissions": ["https://api.dexscreener.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
